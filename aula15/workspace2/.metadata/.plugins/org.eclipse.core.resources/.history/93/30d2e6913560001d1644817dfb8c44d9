package exemplos;

import java.io.BufferedWriter;
import java.io.FileWriter;
import java.io.IOException;

public class Main1 {

	public static void main(String[] args) {
		String aluno = "Juquinha";
		float prova = 7.5f;
		float trabalho = 4.5f;
		float atividades = 10;
		float media = (prova + trabalho + atividades) / 3;
		String saida = String.format("%s\t%.1f\t%.1f\t%.1f\t%.1f\r\n", aluno, prova, trabalho, atividades, media);

		
		
		try {
			BufferedWriter bw = new BufferedWriter(new FileWriter("./BD/notas.txt", true));
			bw.write(saida);
			bw.close();
				System.out.println("arquivo criado com sucesso");
		} catch (IOException e) {
			e.printStackTrace();
		}
	}

}
